<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
      <HBox spacing="5" alignment="CENTER_LEFT">
        <Label fx:id="id" styleClass="cell_big_label">
          <minWidth>
            <!-- Ensures that the label text is never truncated -->
            <Region fx:constant="USE_PREF_SIZE" />
          </minWidth>
        </Label>
        <Label fx:id="description" text="\$first" styleClass="cell_big_label" />
      </HBox>
        <Label fx:id="vehiclePlateNumber" styleClass="cell_small_label" text="\$vehiclePlateNumber" />
        <FlowPane>
          <children>
          <Label fx:id="entryDate" styleClass="cell_small_label" text="\$entryDate" />
          <Label fx:id="estimatedFinish" styleClass="cell_small_label" text="\$estimatedFinish">
              <padding>
                <Insets left="5.0" />
              </padding>
          </Label>
          </children>
        </FlowPane>
        <FlowPane>
            <children>
            <Label fx:id="numberOfParts" styleClass="cell_small_label" text="\$numberOfParts" />
            <Label fx:id="numberOfTechnicians" styleClass="cell_small_label" text="\$numberOfTechnicians">
                <padding>
                  <Insets left="5.0" />
                </padding>
            </Label>
            </children>
        </FlowPane>
    </VBox>
  </GridPane>
</HBox>
